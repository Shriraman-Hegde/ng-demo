node {
    def nodeHome = tool name: 'node-18', type:
    'jenkins.plugins.nodejs.tools.NodeJSInstallation'
    env.PATH = "${nodeHome}/bin:${env.PATH}"

    stage('check tools') {
        sh "node -v"
        sh "npm -v"
        sh "google-chrome --version"
    }

    stage('checkout') {
        checkout scm
    }

    stage('npm install') {
        sh "npm ci"
        sh "npm install"
    }

    stage('unit tests') {
        sh "xvfb-run npm test --browsers=ChromeHeadless --watch=false"
    }

    stage('cypress tests') {
        sh "npm start &"
        sh "npm run cypress:run"
    }
}
